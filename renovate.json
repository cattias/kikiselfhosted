{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "enabled": true,
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "docker-compose": {
    "enabled": true,
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "regexManagers": [
    {
      "fileMatch": ["/\\.yaml$/"],
      "matchStrings": [
        "repoURL:\\s*oci:\\/\\/ghcr\\.io\\/immich-app\\/immich-charts\\/immich\\s*\\n\\s*chart:\\s*immich\\s*\\n\\s*targetRevision:\\s*(?<currentValue>v?[0-9\\.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/immich-app/immich-charts/immich/immich",
      "versioningTemplate": "semver"
    }
  ]
}