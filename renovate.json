{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "enabled": true,
    "customManagers": [
      {
        "customType": "regex",
        "managerFilePatterns": [
          "/(^|/)(apps)/.+\\.yaml$/"
        ],
        "matchStrings": [
          "targetRevision: (?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
        ],
        "depNameTemplate": "argoproj/argo-cd",
        "datasourceTemplate": "github-tags"
      }
    ]
  }
}
